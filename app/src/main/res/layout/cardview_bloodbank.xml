<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cirIM_dia"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_baseline_people" />

        <TextView
            android:id="@+id/Tv_bloodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cirIM_dia"
            android:text="Blood Name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TV_bloodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tv_bloodname"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/cirIM_dia"
            android:text="Price 2000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btn_img"
            android:layout_width="48dp"
            android:layout_height="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/Tv_bloodname"
            android:background="@drawable/circle_button"
            android:elevation="5dp"
            android:src="@drawable/ic_baseline_love" />


        <Button
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_below="@+id/btn_img"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:text="Add To Cart"
            android:backgroundTint="@color/light_green"
            android:layout_toEndOf="@+id/TV_bloodprice"
            android:elevation="10dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>