<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleview_doctor"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user"
            />

        <TextView
            android:id="@+id/docNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="docName"
            android:textSize="20sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/circleview_doctor"
            android:layout_toEndOf="@id/circleview_doctor"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripsation"
            android:textSize="15sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/circleview_doctor"
            android:layout_toEndOf="@id/circleview_doctor"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/docNameTV"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>