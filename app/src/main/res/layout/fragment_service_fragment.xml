<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Service_fragment">

    <!-- TODO: Update blank fragment layout -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/background"
                tools:ignore="MissingConstraints"
                android:padding="10dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="-52dp" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cons_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/mediraj_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Mediraz"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.495"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/servicesOneLL"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    tools:ignore="NotSibling"
                    tools:layout_editor_absoluteX="36dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/mediraj_tv">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="14dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="10dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/appoinmentIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Doctors appointment"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/appoinmentIV"
                                app:layout_constraintStart_toStartOf="@+id/appoinmentIV"
                                app:layout_constraintTop_toBottomOf="@+id/appoinmentIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/diaganosticIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Diaganostic Service"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/diaganosticIV"
                                app:layout_constraintStart_toStartOf="@+id/diaganosticIV"
                                app:layout_constraintTop_toBottomOf="@+id/diaganosticIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/servicesTwoLL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/servicesOneLL">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/clinicIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Clinic Service"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/clinicIV"
                                app:layout_constraintStart_toStartOf="@+id/clinicIV"
                                app:layout_constraintTop_toBottomOf="@+id/clinicIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/BloodIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="BloodBank Service"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/BloodIV"
                                app:layout_constraintStart_toStartOf="@+id/BloodIV"
                                app:layout_constraintTop_toBottomOf="@+id/BloodIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/servicesThreeLL"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@id/servicesTwoLL">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/medicineIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Medicine Service"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/medicineIV"
                                app:layout_constraintStart_toStartOf="@+id/medicineIV"
                                app:layout_constraintTop_toBottomOf="@+id/medicineIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:elevation="16dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="5dp"
                        tools:targetApi="LOLLIPOP">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/pathologyIV"
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:src="@drawable/ic__appoint"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Home pathology"
                                android:textColor="@color/denim"
                                app:layout_constraintEnd_toEndOf="@id/pathologyIV"
                                app:layout_constraintStart_toStartOf="@+id/pathologyIV"
                                app:layout_constraintTop_toBottomOf="@+id/pathologyIV"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>