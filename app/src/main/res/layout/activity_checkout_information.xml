<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    tools:context=".activity.CheckoutInformation">

    <include
        android:id="@+id/includ_cheakout"
        layout="@layout/custom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp"
        app:layout_constraintTop_toBottomOf="@id/includ_cheakout"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:textSize="20sp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_below="@id/delivery">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/mainLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:paddingStart="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/cheak_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Name"
                                android:textSize="18sp"
                                android:drawableStart="@drawable/ic_user"
                                android:drawablePadding="5dp"/>

                            <EditText
                                android:id="@+id/Tv_chekupname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Address"
                                android:layout_marginStart="28dp"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btn_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_button"
                                android:padding="5dp"
                                android:src="@drawable/ic_edit" />

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cheak_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:layout_below="@id/card_one"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/noto_sans"
                android:layout_marginStart="12dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_below="@id/cheak_contact">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/mainLay_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:paddingStart="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <EditText
                                android:id="@+id/cheak_user_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_baseline_call"
                                android:drawablePadding="5dp"
                                android:hint="01740-155577"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:gravity="end"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/btn_edit_contact"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_button"
                                android:padding="5dp"
                                android:src="@drawable/ic_edit" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>












            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cheak_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_two"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/noto_sans"
                android:text="Order Item"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_below="@id/cheak_item">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/mainLay_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:paddingStart="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/Order_item"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Order items"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/Order_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Order price"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/order_tottal_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="Tottal Price"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/order_tottal_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="$100000"
                                android:padding="5dp" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>












            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/cheak_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_three"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/noto_sans"
                android:text="Order Summary"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:layout_below="@id/cheak_summary">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/mainLay_four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:paddingStart="5dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/summary_subtotal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Subtotal"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/delivery_charge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Delivery Charge"
                                android:layout_marginTop="5dp"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/summary_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Delivery Charge"
                                android:layout_marginTop="5dp"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/summary_subtotal_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="$100000"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/summary_delivery_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="$10"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/summary_total_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:text="$100000"
                                android:padding="5dp" />
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>












            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cheakout_confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_below="@id/card_four">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/noto_sans"
                    android:padding="8dp"
                    android:text="Confirm order"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/white"
                    android:textColorHighlight="@color/white"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>